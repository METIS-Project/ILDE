  <persistence-unit name="GLUEPS_PUe" transaction-type="RESOURCE_LOCAL">
    <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
    <class>glueps.core.persistence.entities.UserEntity</class>
