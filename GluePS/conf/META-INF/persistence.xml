    <class>glueps.core.persistence.entities.OauthTokenEntity</class>
    <class>glueps.core.persistence.entities.DeployVersionEntity</class>
    <class>glueps.core.persistence.entities.LearningEnvironmentTypeEntity</class>
    <class>glueps.core.persistence.entities.AsynchronousOperationEntity</class>
    <properties> 
      <property name="javax.persistence.jdbc.user" value="glueps"/>
      <property name="javax.persistence.jdbc.password" value="glueps"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/glueps"/>
